# Hybrid development environment configuration
# Copy this file: cp .env.hybrid.example .env.hybrid
# Then set DIGIT_REMOTE to your shared server's IP or hostname.

# Remote server running infra + core services
# Examples:
#   DIGIT_REMOTE=192.168.1.100
#   DIGIT_REMOTE=dev-server.example.com
#   DIGIT_REMOTE=100.64.0.5          (Tailscale IP)
DIGIT_REMOTE=localhost

# Postgres
SPRING_DATASOURCE_URL=jdbc:postgresql://${DIGIT_REMOTE}:15432/egov
SPRING_DATASOURCE_USERNAME=egov
SPRING_DATASOURCE_PASSWORD=egov123

# Kafka (Redpanda)
KAFKA_BOOTSTRAP_SERVERS=${DIGIT_REMOTE}:19092
SPRING_KAFKA_BOOTSTRAP_SERVERS=${DIGIT_REMOTE}:19092

# Redis
SPRING_REDIS_HOST=${DIGIT_REMOTE}
SPRING_REDIS_PORT=16379

# Core service URLs
EGOV_MDMS_HOST=http://${DIGIT_REMOTE}:18094
EGOV_USER_HOST=http://${DIGIT_REMOTE}:18107
EGOV_WORKFLOW_HOST=http://${DIGIT_REMOTE}:18109
EGOV_LOCALIZATION_HOST=http://${DIGIT_REMOTE}:18096
EGOV_IDGEN_HOST=http://${DIGIT_REMOTE}:18088
EGOV_ENC_HOST=http://${DIGIT_REMOTE}:11234
EGOV_ACCESSCONTROL_HOST=http://${DIGIT_REMOTE}:18090
EGOV_PERSISTER_HOST=http://${DIGIT_REMOTE}:18091
EGOV_FILESTORE_HOST=http://${DIGIT_REMOTE}:18084
EGOV_HRMS_HOST=http://${DIGIT_REMOTE}:18092
